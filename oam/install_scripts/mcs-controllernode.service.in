[Unit]
Description=mcs-controllernode
After=network.target

[Service]
Type=simple

User=@DEFAULT_USER@
Group=@DEFAULT_GROUP@
LimitNOFILE=65536
LimitNPROC=65536

ExecStartPre=/bin/sleep 7
ExecStart=@ENGINE_BINDIR@/controllernode fg
ExecStop=@ENGINE_BINDIR@/mcs-stop-controllernode.sh $MAINPID

Restart=on-failure
