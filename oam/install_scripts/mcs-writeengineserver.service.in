[Unit]
Description=MariaDB columnstore engine WriteEngineServer

# restart/stop writeengineserver on restart/stop of exemgr
PartOf=mcs-exemgr.service
After=mcs-exemgr.service

[Service]
Type=simple

User=mysql
Group=mysql
LimitNOFILE=65536
LimitNPROC=65536

ExecStart=/usr/bin/env bash -c "LD_PRELOAD=$(ldconfig -p | grep -m1 libjemalloc | awk '{print $1}') exec @ENGINE_BINDIR@/WriteEngineServer"

Restart=on-failure
TimeoutStopSec=20
