[Unit]
Description=MariaDB columnstore engine workernode
Wants=mcs-loadbrm.service
After=mcs-loadbrm.service

[Service]
Type=simple

User=mysql
Group=mysql
LimitNOFILE=65536
LimitNProc=65536

ExecStart=@ENGINE_BINDIR@/workernode DBRM_Worker1 fg
ExecStopPost=-@ENGINE_BINDIR@/mcs-savebrm.py
ExecStopPost=/usr/bin/env bash -c "clearShm > /dev/null 2>&1"
Restart=on-failure
TimeoutStopSec=300
