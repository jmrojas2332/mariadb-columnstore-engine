[Unit]
Description=MariaDB columnstore engine ExeMgr

# restart/stop exemgr on restart/stop of primproc
PartOf=mcs-primproc.service
After=mcs-primproc.service

[Service]
Type=simple

User=mysql
Group=mysql
LimitNOFILE=65536
LimitNPROC=65536

ExecStart=/usr/bin/env bash -c "LD_PRELOAD=$(ldconfig -p | grep -m1 libjemalloc | awk '{print $1}') exec @ENGINE_BINDIR@/ExeMgr"

Restart=on-failure
TimeoutStopSec=5
